#include <bits/stdc++.h>

using namespace std;

int main()
{
    int totalcal=0;
    vector<int> v(4);
    for(int i=0;i<4;i++){
        cin >> v[i];
    }
    string s; cin>>s;
    for(int i=0; i<s.size() ; i++){
        if(s[i]=='1'){
            totalcal+=v[0];
        }
        else if(s[i]=='2'){
            totalcal+=v[1];
        }
        else if(s[i]=='3'){
            totalcal+=v[2];
        }
        else{
            totalcal+=v[3];
        }
    }
    cout << totalcal << endl;
}
