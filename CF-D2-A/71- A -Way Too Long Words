#include<bits/stdc++.h>

using namespace std;

int main()
{
    string s;
    int a;cin>>a;
    while(a--){
    cin>>s;
    int c=0,n=s.size();
    for(int i = 1 ; i<n-1 ; i++)
    {
        if(s[i]>='a' && s[i]<='z')
        {
            c++;
        }
    }
    if(c>=9)
    {
        cout << s[0] << c << s[n-1] << endl;
    }
    else{
        for(int i=0 ; i<n ; i++)
        {
            cout << s[i];
        }
        cout << endl;
    }
}
}
