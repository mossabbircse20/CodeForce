#include <bits/stdc++.h>

using namespace std;


int main()
{
    int n,c=1; cin>>n;
    string ss;
    while(n--)
    {
        string s;cin>>s;
        ss+=s;
    }
    for(int i=0 ; i<ss.size()-1; i++)
        {
            if(ss[i]==ss[i+1])
            {
                c++;
            }
        }
    cout << c << endl;
}
